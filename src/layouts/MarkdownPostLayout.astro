        {frontmatter.title}
      </h1>
      {
        frontmatter.subtitle && (
          <p class="text-lg text-stone-800">{frontmatter.subtitle}</p>
        )
      }
      {
        frontmatter.tags && (
          <ul class="flex flex-wrap gap-2 mt-4">
            {frontmatter.tags.map((tag: string) => (
              <li class="bg-stone-200 text-stone-800 px-2 py-1 text-sm rounded">
                {tag}
              </li>
            ))}
          </ul>
        )
      }
      {
        frontmatter.img && (
