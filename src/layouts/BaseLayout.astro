---
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import SEO from "../components/SEO.astro";
import "../../public/styles/global.css";

export interface Props {
  pageTitle: string;
  description?: string;
  keywords?: string[];
  image?: string;
  type?: 'website' | 'article' | 'profile';
  canonical?: string;
  publishedTime?: string;
  modifiedTime?: string;
}

const { 
  pageTitle, 
  description = "Desarrolladora web freelance especializada en aplicaciones modernas, automatización de procesos y soluciones digitales personalizadas. React, TypeScript, Astro y más.",
  keywords = ["desarrolladora web", "freelance", "react", "typescript", "astro", "automatización", "aplicaciones web", "argentina"],
  image,
  type = 'website',
  canonical,
  publishedTime,
  modifiedTime
} = Astro.props;
---

<html lang="es" data-theme="ligth">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon-kathe.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- SEO Component -->
    <SEO 
      title={pageTitle}
      description={description}
      keywords={keywords}
      image={image}
      type={type}
      canonical={canonical}
      publishedTime={publishedTime}
      modifiedTime={modifiedTime}
    />
    
    <!-- Fuentes del sistema (sin cookies de terceros) -->
    <style>
      :root {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Helvetica Neue', Arial, sans-serif;
      }
    </style>
    
    <!-- Sin scripts de terceros - sitio limpio sin cookies innecesarias -->
  </head>
  <body class="bg-stone-100 text-stone-800 min-h-screen w-full font-nunito">
    <Header />
    <main class="container mx-auto px-4 sm:px-6 lg:px-8 pb-32 max-w-6xl">
      <slot />
    </main>
    <Footer />
  </body>
</html>
