---
import ServicesCards from "../components/ServicesCards.astro";
import CTA from "../components/CTA.astro";
import ContainerPages from "../components/ContainerPages.astro";

const pageTitle = "Servicios de Desarrollo Web - Especialista en ERPs Industriales";
const description = "Servicios de desarrollo web freelance especializados en sistemas ERP para carrocerías, automatización industrial, dashboards personalizados y digitalización de procesos empresariales para el sector metalúrgico.";
const keywords = [
  "servicios desarrollo web",
  "sistemas erp carrocerias",
  "automatización industrial",
  "software carrocerias camiones",
  "digitalización metalúrgica",
  "dashboards industriales",
  "desarrollo erp personalizado",
  "aplicaciones react industriales",
  "optimización procesos carrocerias",
  "freelance developer industrial"
];
---

<ContainerPages
  pageTitle="Servicios"
  pageTitleComplete="Servicios que te ayudan a trabajar mejor"
  description="Soluciones digitales personalizadas para optimizar procesos, automatizar tareas y mejorar tu gestión."
  imgUrl="/services-portrait.webp"
>
  <ServicesCards />
  <CTA
    title="¿No sabés por dónde empezar?"
    description="Si tienes dudas sobre qué servicio se adapta mejor a tus necesidades,escríbime y lo vemos juntos. Estoy acá para ayudarte a trabajar de forma más simple, eficiente y conectada."
    href="/contactme"
    buttonTitle="Reservar una reunión"
  />
</ContainerPages>
