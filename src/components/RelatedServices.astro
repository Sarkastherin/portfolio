---
const { exclude } = Astro.props;
import { services } from "./ServicesCards.astro";
const servicesFilter = services.filter((s) => s.link !== exclude);
---

<section>
  <h2 class="text-xl font-semibold mb-6 text-stone-800">
    También te podría interesar
  </h2>
  <div class="grid grid-cols-1 sm:grid-cols-3 gap-6">
    {
      servicesFilter.map((s) => (
        <a href={s.link} class="block bg-white shadow-md rounded-2xl p-6 transition hover:shadow-lg hover:scale-[1.02]">
          <div class="text-3xl mb-2">{s.icon}</div>
          <h3 class="text-lg font-semibold text-stone-800 mb-1">
            {s.title}
          </h3>
          <p class="text-stone-800 text-sm">
            {s.description}
          </p>
        </a>
      ))
    }
  </div>
</section>
