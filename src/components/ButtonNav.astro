---
const { href, title, outline } = Astro.props as {
  href: string;
  title: string;
  outline: boolean;
};
---

<a
  class=`cursor-pointer group relative inline-block text-sm font-medium ${outline ? "text-rose-500": "text-white" }  focus:ring-3 focus:outline-hidden`
  href={href}
>
  <span class=`absolute inset-0 border rounded ${outline ? "border-current": "border-rose-500" }`></span>
  <span
    class=`rounded block border ${outline ? "border-current bg-white": "border-rose-500 bg-rose-500" }  px-8 py-2 transition-transform group-hover:-translate-x-1 group-hover:-translate-y-1`
  >
    {title}
  </span>
</a>
